{
  "name": "vscode-veryl",
  "displayName": "Veryl",
  "description": "Veryl extension for Visual Studio Code",
  "version": "0.13.4",
  "publisher": "dalance",
  "icon": "veryl_icon.png",
  "galleryBanner": {
      "color": "#ffffff",
      "themr": "light"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/veryl-lang/veryl.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:veryl",
    "workspaceContains:*/Veryl.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-veryl.restartServer",
        "title": "Restart language server",
        "category": "vscode-veryl"
      }
    ],
    "configuration": [
      {
        "title": "Veryl Language Server",
        "properties": {
          "vscode-veryl.verylLsBinary.path": {
            "scope": "window",
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Specify veryl-ls binary path."
          }
        }
      }
    ],
    "languages": [
      {
        "id": "veryl",
        "aliases": [
          "Veryl",
          "veryl"
        ],
        "extensions": [
          ".veryl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "veryl",
        "scopeName": "source.veryl",
        "path": "./syntaxes/veryl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy:linux-x64": "vsce publish --target linux-x64",
    "deploy:win32-x64": "vsce publish --target win32-x64",
    "deploy:darwin-x64": "vsce publish --target darwin-x64",
    "deploy:darwin-arm64": "vsce publish --target darwin-arm64"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.16.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}
